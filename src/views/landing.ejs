<!DOCTYPE html>
<html ng-app="rssModule">
  <head>
    <link href="/css/landing.css" rel="stylesheet">
    <script type="text/javascript" src="http://code.angularjs.org/1.2.1/angular.min.js"></script>  
    <script type="text/javascript" src="http://code.angularjs.org/1.2.1/angular-loader.min.js"></script>  
    <script type="text/javascript" src="http://code.angularjs.org/1.2.1/angular-resource.min.js"></script>  
    <script src="/js/controllers/rssController.js"></script>    
    <title>Rss feeds</title>
   </head>

   <body>
    <section id="header">
      <h1 id="rss">Rss Feeds</h1>
      <h2>Rss from BBC and Sky</h2>
    </section>
  
    <div ng-controller="rssController" ng-init="fetch('http://feeds.bbci.co.uk/news/rss.xml;http://news.sky.com/feeds/rss/home.xml')"> 
    <section class="channel" ng-repeat="rss in feeds">
       <img src="{{rss.channel.image.url}}" alt="{{rss.channel.image.title}}"/>
       <h3>{{rss.channel.title}}</h3>
        
        <article ng-repeat="article in rss.channel.item">
          <h4><a href='{{ article.link }}'>{{article.title}}</a></h4>
          <p>{{article.description}}</p>
        </article>  
     
      </section>
    </div>

  </body>
</html>
